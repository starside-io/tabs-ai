{
  "manifest_version": 3,
  "name": "AI Tab Grouper",
  "version": "1.0",
  "description": "An extension that uses AI to automatically group tabs by subject.",
  "permissions": [
    "tabs",
    "tabGroups",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}